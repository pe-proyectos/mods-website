`,
	historyVersion: [
		{
			version: "1.1.2",
			description: "Switching savegame shouldn't break the mod anymore",
			downloadNumbers: 5766,
		},
		{
			version: "1.1.1",
			description: "Fixed for 1.0",
			downloadNumbers: 3263,
		},
		{
			version: "1.1.0",
			description: "Added size control in mod settings",
			downloadNumbers: 3628,
		},
		{
			version: "1.0.0",
			description: "First release",
			downloadNumbers: 65,
		},
	],

	// agregar mas props
};
---

<Layout title={dataExample.title}>
	<Modal client:only/>
	<div class="flex flex-col gap-1 text-text_primary mx-auto items-center">
		<h1
			class="text-5xl mt-2 font-semibold max-sm:text-4xl max-[480px]:text-3xl max-[370px]:text-2xl"
		>
			{dataExample.title}
		</h1>
		<p>
			por <span class="text-text_blue cursor-pointer hover:underline"
				>{dataExample.owner}</span
			>
		</p>
	</div>

	<div class="w-full px-10 mx-auto flex flex-row gap-2 mt-3 max-lg:flex-col">
		<div class="w-[50%] max-lg:w-full">
			<CardDownloadMod
				id="12"
				,
				img={dataExample.img}
				,
				abstract={dataExample.abstract}
				,
				currentVersion={dataExample.currentVersion}
				,
				downloadLink={"/"}
				,
				downloadNumbers={dataExample.downloadNumbers}
				,
				followers={dataExample.followers}
				,
				timeAgo={dataExample.timeAgo}
				,
			/>
		</div>
		<div
			class="w-[50%] bg-[#161B22] rounded-lg min-h-[450px] max-lg:w-full"
		>
			<textarea
				class="w-full bg-transparent min-h-[450px] text-text_primary font-mono py-5 px-6 text-start"
				disabled
			>
				{dataExample.instructions}
			</textarea>
		</div>
	</div>

	<div class="w-full px-10 mx-auto flex flex-col gap-5 mt-5 items-center">
		<p
			class="text-text_primary text-3xl font-semibold max-sm:text-2xl max-[480px]:text-3xl max-[370px]:text-xl"
		>
			Historial de versiones
		</p>
		<TableHistoryVersion HistoryVersionArray={dataExample.historyVersion} />
	</div>

	<div class="min-h-[10vh]"></div>
</Layout>
